# Routes
# ~~~~

GET        /                            controllers.HomeController.index
GET        /minesweeper                 controllers.HomeController.minesweeper(command = "")
GET        /minesweeper/:command        controllers.HomeController.minesweeper(command)
GET        /history                     controllers.HomeController.history

GET        /polymer                     controllers.HomeController.polymerGame


GET        /ws                          controllers.WSController.ws

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
